{{> wrapper_header page_title='ACTIVE JOBS'}}

<!DOCTYPE html>
<html>
	<head>
		<title>AutoWorks</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="CSS/global.css">
		<link rel="stylesheet" href="CSS/offSession.css">
	</head>
	<body>
		<div class="container off-session-container">
			<form action="/hregisterconfirm" method="POST" class="off-session-form">
				<img src="IMAGES/AutoWork.png" alt="logo" id="logo"> <br>
				<a href="/login" class="off-session-back">< BACK</a>
				<p class="error-msg">{{error_msg}}</p>
				<p class="success-msg">{{success_msg}}</p>
				<p class="off-session-title">SIGNUP</p>
				<input type="text" name="fname" placeholder="FIRST NAME" required> <br>
				<input type="text" name="lname" placeholder="LAST NAME" required><br>
				<input type="text" name="pos" placeholder="POSITION" required><br>
				<input type="text" name="name" placeholder="USERNAME" required><br>
				<div id="password-container">
				<input type="password" name="pass" placeholder="PASSWORD" required>
				<img src="IMAGES/eye-show.png" alt="show pass icon">
				</div>
				<input type="tel" name="contact" size="25" pattern="[0-9]{4}-[0-9]{3}-[0-9]{4}|[0-9]{4}-[0-9]{4}|[0-9]{11}|[0-9]{8}" placeholder="Contact No: 09XXXXXXXXX or 8XXXXXXX" required> <br>
				<input type="email" name="email" placeholder="EMAIL" required><br>
				<div id="hsec-que">
					<p>
					Security Question 1: 
					<select name="q1">
						<option selected>What is your favorite number?</option>
						<option>What is your mom's maiden name?</option>
						<option>What is your favorite food?</option>
						<option>What is the name of your first pet?</option>
					</select>
					<br><br>
					Answer: <input type="text" name="a1" required>
					<br><br>

					Security Question 2: 
					<select name="q2">
						<option>What is your favorite number?</option>
						<option selected>What is your mom's maiden name?</option>
						<option>What is your favorite food?</option>
						<option>What is the name of your first pet?</option>
					</select>
					<br><br>
					Answer: <input type="text" name="a2" required>
					<br><br>

					Security Question 3: 
					<select name="q3">
						<option>What is your favorite number?</option>
						<option>What is your mom's maiden name?</option>
						<option selected>What is your favorite food?</option>
						<option>What is the name of your first pet?</option>
					</select>
					<br><br>
					Answer: <input type="text" name="a3" required>
					</p>

					<br>
					<div id="4th-que">
						<button class="global-button" id="hadd-que">Add Fourth Question</button></h3></p>
					</div>
				</div>
				<br><br>
					<div>
					<button type="submit" class="global-button">SIGN-UP</button>
				</div>
			</form>
		</div>

        <script src="https://code.jquery.com/jquery-3.4.1.min.js" type="text/javascript"></script>
        <script src="JS/script.js"></script>
    </body>
</html>